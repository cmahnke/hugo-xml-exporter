{{- printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>" | safeHTML -}}
<site>
    <title>{{ site.Title | xmlEscape }}</title>
    <baseURL>{{ site.BaseURL }}</baseURL>
    <buildDate>{{ now.Format "2006-01-02T15:04:05Z07:00" }}</buildDate>
    <content>
    {{- /* Render top-level pages */ -}}
    {{- partial "xml-page.html" . -}}
    {{- /* Render sections recursively */ -}}
    {{- range .Site.Sections -}}
        {{- partial "xml-section.html" . -}}
    {{- end -}}
    </content>
</site>
